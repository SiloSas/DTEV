# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                         controllers.Application.index
GET     /admin                    controllers.Application.admin
POST    /contact                  @util.Utilities.contact
GET	    /rooms                    @Room.RoomController.findAll
GET		/room                     @Room.RoomController.findById(id: String)
POST    /room                     @Room.RoomController.update
POST    /agreement                @services.ServicesController.update
POST    /reservation              @Room.RoomController.postReservation
GET     /reservations             @Room.RoomController.findAllReservations
GET     /reservationsString       @Room.RoomController.findAllReservationsString
#(id: String, name: String, presentation: String, header: String, images: String, isAnApartment: Boolean, price: String)
GET		/availableRooms           @Room.RoomController.findAvailable(start: Long, end: Long)
GET	    /agreements               @services.ServicesController.findAll
GET	    /comments                 @Comments.CommentsController.findAll
POST    /comments                 @Comments.CommentsController.post
PUT     /comments                 @Comments.CommentsController.update
GET     /tariffs                  @tariffs.TariffsController.find
PUT     /tariffs                  @tariffs.TariffsController.update(text: String)

################################## Mails ################################################
POST    /mails                    @mails.MailController.send(content: String, from: String)

POST    /upload                   images.Images.uploadImage
GET     /images/:fileName         images.Images.getImage(fileName: String)

# Connection
#authenticate(login: String, password: String)
GET     /authenticate             @administration.AuthenticationController.authenticate(login: String, password: String)
GET     /logout                   @administration.AuthenticationController.logout
GET     /isConnected              @administration.AuthenticationController.isConnected

#general Desc
GET     /generalDesc              @generalDescription.GeneralDescController.find()
PUT     /generalDesc              @generalDescription.GeneralDescController.update(text: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file             controllers.Assets.at(path="/public", file)
